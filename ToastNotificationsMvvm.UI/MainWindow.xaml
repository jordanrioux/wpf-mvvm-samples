<Window x:Class="ToastNotificationsMvvm.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToastNotificationsMvvm.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Bad UI code, just keeping it simple for Toast demo -->
        <Label Content="Random value: "></Label>
        <Label Content="{Binding RandomValue}" Margin="90,0,0,0"></Label>
        <Button Content="Click to show a Toast" Command="{Binding ShowToastCommand}" Width="150" Height="40"></Button> 
    </Grid>
</Window>
